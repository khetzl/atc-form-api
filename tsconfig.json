{
    "compilerOptions": {
        "target": "es2015",
        "declaration": true,
        "module": "commonjs",
        "lib": ["es6"],
        "allowJs": true,
        "outDir": "./dist",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*",
        "src/**/*.json"
    ],
}
